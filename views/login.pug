.uk-modal-dialog.uk-modal-body
    h2.uk-modal-title Login
    button.uk-modal-close-outside(type="button" uk-close)
    form(method="post" action='/login')
      fieldset.uk-fieldset
        .uk-margin
          input.uk-input(type="text" value='' name="username" placeholder="Login")
        .uk-margin
          input.uk-input(type="password" value='' name="password" placeholder="Password")
        button.uk-button.uk-button-default(type="submit") Login
        a.uk-button.uk-button-secondary(href="/register") Register
    h3 #{error}
