- var options = {year: 'numeric', month: 'numeric', day: 'numeric'}

.uk-grid(uk-grid).uk-padding.uk-section-expand.uk-height-xsmall
  h2.uk-heading.uk-width-1-2 Привет, #{Ses.user.FirstName}!
  h4.uk-width-1-2.uk-text-right Вы с нами с #{Ses.user.date_registered.toLocaleString('ru', options)}
.uk-section.uk-section-expand.uk-padding-remove-top
  .uk-padding-large.uk-position-relative.uk-position-z-index.uk-float-left
      ul.uk-switcher.switch
        li
          #orders
            ul.uk-grid-match.uk-child-width-1-3(uk-grid)
              each val, i in orders
                if orders[i].status == 'new'
                  li
                    div
                      .uk-card-body.uk-card-default
                        h3.uk-margin-small Заказ № #{orders[i].number}
                        h5.uk-margin-small Услуга: #{orders[i].name.name}
                        h5.uk-margin-small Заказчик: #{orders[i].customer.FirstName} #{orders[i].customer.LastName}
                        h5.uk-margin-small Дата исполнения: #{orders[i].date_desire.toLocaleString('ru', options)}
                        if orders[i].place == 'master'
                          h5.uk-margin-small Выполняется у мастрера
                        else 
                          h5.uk-margin-small Выполняется у клиента
                        p.uk-text-media.uk-margin-remove-top #{orders[i].address.district} район
                        hr
                        - var voted = [];
                        if orders[i].votes != 0
                          p Голосов: #{orders[i].votes.length}
                        else
                          p Вы будете первым кто откликнется
                        each val in orders[i].votes
                          - voted.push(val.master.toString());
                        - var idx = voted.indexOf(Ses.user.id.toString())
                        if idx != -1
                          p Вы уже откликнулись на этот заказ
                        else
                          form(id="order_vote" method='POST' action="/master_vote/" + Ses.user.id + '.' + orders[i].id)
                            .uk-margin-right
                              input.uk-input.uk-form-width-small(type="number" placeholder="Цена" name="price")
                            .uk-margin
                              button.submit.uk-margin-right.uk-button.uk-button-primary(type='submit') хочу этот заказ
        li
          .uk-container-small.uk-padding-large.uk-background-muted
            h2.uk-heading-divider Редактировать профиль
            -var usl = []
            each cat, c in Ses.user.uslugi
              if cat != null
                each sub, s in Ses.user.uslugi[c].sub_cat
                  - usl.push(sub.toString())
              else
            form(method="post" action='/register' + Ses.user.id enctype="multipart/form-data")
              .uk-margin
                input.uk-input(type="text" placeholder="Имя" name="FirstName" value=Ses.user.FirstName)        
              .uk-margin
                input.uk-input(type="text" placeholder="Фамилия" name="LastName" value=Ses.user.LastName)
              .uk-margin
                input.uk-input(type="text" placeholder="Телефон" name="PhoneNumber" value=Ses.user.PhoneNumber)
              .uk-margin
                select.uk-select(name="city")
                  option Воронеж
                  option Бобров
                  option Богучар
                  option Бутурлиновка
                  option Калач
                  option Лиски
                  option Нововоронеж
                  option Новохопёрск
                  option Острогожск
                  option Павловск
                  option Поворино
                  option Россошь
                  option Семилуки
                  option Эртиль    
                legend.uk-margin-top.uk-legend Какие услуги вы предоставляете
                ul.uk-list(uk-accordion="multiple: true")
                  each val, i in uslugi
                    li
                      h3.uk-accordion-title= uslugi[i].name
                      .uk-accordion-content
                        input.uk-hidden.parent.uk-checkbox(type="checkbox" name="uslugi["+i+"][name]" value=uslugi[i].id)
                        ul
                          each val, k in uslugi[i].sub_cat
                            if usl.indexOf(val.id.toString()) != -1
                              -var checked = true 
                            else
                              - checked = false
                            li
                              label #[input.child.uk-checkbox(type="checkbox" name="uslugi["+i+"][sub_cat]" checked=checked)] #{uslugi[i].sub_cat[k].name}
                  .uk-margin-top
                    label #[input.uk-checkbox(type="checkbox" name="go_out" checked=(Ses.user.go_out))] Выезжаю к клиенту
                  textarea.uk-textarea(rows="5" name="about" placeholder="Расскажите нам о себе")
              button.uk-button(type="submit") Изменить
        li  
          #reset_password.uk-container-small.uk-background-muted
            h4 Сбросить пароль
        li  
          #portfolio.uk-container-large.uk-background-muted
            <div class="test-upload uk-placeholder uk-text-center">
              <span uk-icon="icon: cloud-upload"></span>
              <span class="uk-text-middle">Attach binaries by dropping them here or</span>
              <div uk-form-custom>
                  <input type="file" multiple>
                  <span class="uk-link">selecting one</span>
              </div>
            </div>
        li  
          #oplata.uk-container-small.uk-background-muted.uk-padding-large
            .uk-container-small.uk-padding-large.uk-background-muted
              h2.uk-heading-divider Оплата
                <style>.tinkoffPayRow{display:block;margin:1%;width:160px;}</style>
                <script src="https://securepay.tinkoff.ru/html/payForm/js/tinkoff.js"></script>
                <form name="TinkoffPayForm" onsubmit="pay(this); return false;">
                  <input class="tinkoffPayRow" type="hidden" name="terminalkey" value="1507039678027DEMO">
                  <input class="tinkoffPayRow" type="hidden" name="frame" value="true">
                  <input class="tinkoffPayRow" type="hidden" name="language" value="ru">
                  select.uk-select.tinkoffPayRow(type="select" placeholder="Сумма заказа" name="amount" required)
                    option(value="1000") 1 месяц
                    option(value="3000") 3 месяца
                  <input class="tinkoffPayRow" type="hidden" placeholder="Номер заказа" name="order">
                  <input class="tinkoffPayRow" type="hidden" placeholder="Описание заказа" name="description" value="Оплата за месяц">
                  input.tinkoffPayRow(type="hidden" placeholder="ФИО плательщика" name="name" value=Ses.user.FirstName + ' ' + Ses.user.LastName)
                  input.tinkoffPayRow(type="hidden" placeholder="E-mail" name="email" value=Ses.user.Email)
                  input.tinkoffPayRow(type="hidden" placeholder="Контактный телефон" name="phone" value=Ses.user.PhoneNumber)
                  input.tinkoffPayRow.uk-button.uk-button-primary(type="submit" value="Оплатить")
                </form>
  .uk-panel(style="width:100% !important")
    .uk-section.uk-section-cover(style="width:100% !important; height:100%; background-attachment: fixed; background-position: right center; background-image: url(/images/desk1.jpg)")
    .uk-overlay.uk-overlay-primary.uk-position-cover
      
